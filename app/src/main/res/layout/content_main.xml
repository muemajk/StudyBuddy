<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To begin press the add button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/greetingid" app:layout_constraintVertical_bias="0.058"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="108dp" android:id="@+id/textView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to StudyBuddy"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/greetingid" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.496" app:layout_constraintVertical_bias="0.155"/>
    <TextView
            android:text="StudyBuddy philosophy is to  providing students with an easy manageable approach to studying. Our application is based on the scientifically  proven best study method of breaking down study  into 20 minutes sessions"
            android:layout_width="366dp"
            android:layout_height="102dp"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.692"
            app:layout_constraintHorizontal_bias="0.482"/>


</androidx.constraintlayout.widget.ConstraintLayout>